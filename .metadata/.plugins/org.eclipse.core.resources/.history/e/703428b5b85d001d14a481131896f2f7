package RDP_Client;


import java.awt.Graphics;
import java.awt.Image;
import java.awt.image.BufferedImage;
import java.io.ByteArrayInputStream;
import java.io.IOException;
import java.io.ObjectInputStream;
import java.net.Socket;

import javax.swing.ImageIcon;
import javax.swing.JPanel;

public class ReceiveScreen extends Thread {

	
	private JPanel panel = new JPanel();
	Socket soc;

	public ReceiveScreen(Socket soc, JPanel panel) {
		this.soc = soc;
		this.panel = panel;
		start();
	}

	public void run() {
		BufferedImage image;
		ByteArrayInputStream bais;
		while (true) {     
			try {
				
				
				
                //image = image.getScaledInstance(panel.getWidth(), panel.getHeight(), Image.SCALE_FAST);
				Graphics g = panel.getGraphics();
				g.drawImage(image, 0, 0, panel.getWidth(), panel.getHeight(), panel);
			} catch (IOException e) {
				e.printStackTrace();
			}
		}
	}

}
